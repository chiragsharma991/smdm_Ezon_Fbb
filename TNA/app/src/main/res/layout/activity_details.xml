<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/drawerSettingsToolbar"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_sidedrawer"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"   />

            <TextView
                android:id="@+id/txtABTitleLL_Selection"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="Activity Details"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--
            <ImageButton
                android:id="@+id/txtLLS_Cancel"
                android:background="@drawable/gll_cancel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
-->
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tablelayout"
                android:layout_below="@+id/drawerSettingsToolbar"
                android:layout_margin="5dp">


            </TableLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Save"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textAlignment="center"/>

        </LinearLayout>

    </ScrollView>


    </LinearLayout>