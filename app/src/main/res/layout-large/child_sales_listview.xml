<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="190dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/txtVal"
            android:text="Name"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/ezfbb_black"
            android:layout_width="250dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginLeft="270dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rel"
            android:id="@+id/txtPvAValue"
            android:text="vbbvvvvvvv"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="13sp"
            android:textColor="@color/ezfbb_black"
            android:layout_width="150dp"
            android:layout_height="30dp" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/rel"
            android:layout_width="120dp"
            android:layout_height="30dp">


            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/innerrellay"
                android:layout_width="100dp"
                android:layout_marginLeft="5dp"
                android:layout_height="10dp">

                <TextView
                    android:id= "@+id/txtPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

                <TextView
                    android:id= "@+id/txtAchieve"
                    android:background="@android:color/black"
                    android:layout_width="5dp"
                    android:layout_height="29dp" />
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

