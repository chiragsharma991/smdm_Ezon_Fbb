<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:background="#0000"
        android:keepScreenOn="true"
        android:theme="@style/ProgressBar"


        >



    </ProgressBar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bst_cardView"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bst_Rel_image_child"

            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:src="@mipmap/placeholder"
                android:scaleType="fitXY"
                android:id="@+id/bst_image_child"
                android:visibility="invisible"

                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/bst_Rel_image_child"
            android:layout_alignBottom="@+id/bst_Rel_image_child"
            >

            <!--Buy one-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity=""
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bst_head_child"
                    android:text="Buy One Get One "
                    android:textColor="#000000"
                    android:textSize="11sp"


                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/bst_lineOne_child"
                    android:background="@color/divider_salescard"
                    android:layout_alignStart="@+id/bst_head_child"
                    android:layout_marginTop="10dp"
                    />


                <!--Promo sales-->


                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.5"
                        android:text="Promo Sales"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="11sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.1"
                        android:text=":"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:textSize="12dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.4"
                        android:id="@+id/bst_PromoValues_child"
                        android:text="Promo Sales"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:textSize="13sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <!--Promo Sales(U)-->

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.5"
                        android:text="Promo Sales(U)"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="11sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.1"
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.4"
                        android:id="@+id/bst_PromoValuesU_child"
                        android:text="Promo Sales"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>




        </RelativeLayout>

    </RelativeLayout>







</RelativeLayout>
