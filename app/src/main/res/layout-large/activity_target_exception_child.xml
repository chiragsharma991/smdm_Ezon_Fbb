<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                android:background="@color/bg_screen_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/target_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal">

            <!--Buy one-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <!---->

                    <TextView
                        android:id="@+id/target_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Buy One Get One"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_inflator_title_large"
                        android:textStyle="bold"


                        />

                    <RelativeLayout
                        android:id="@+id/target_fav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"

                        >




                        <ToggleButton
                            android:id="@+id/toggle_target_fav"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/toggleswitch"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textOff=""
                            android:textOn=""

                            />


                    </RelativeLayout>
                </LinearLayout>
                <!--SOH (U)-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="SOH(U)"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:textColor="@color/smdm_default_color"
                        android:text=":"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:id="@+id/target_SOH_U"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="100"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                </LinearLayout>


                <!--Target ROS-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="Ideal Stock"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:textColor="@color/smdm_default_color"
                        android:text=":"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:id="@+id/target_ROS_U"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="100"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                </LinearLayout>

              <!--ROS(U)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="ROS(U)"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:textColor="@color/smdm_default_color"
                        android:text=":"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:id="@+id/target_ROS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="5"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                </LinearLayout>

                <!--Availability-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:text="Availability%"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:textColor="@color/smdm_default_color"
                        android:text=":"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <TextView
                        android:id="@+id/target_Availability"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:text="5"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>