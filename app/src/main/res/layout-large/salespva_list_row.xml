<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/txtPlanClass"
            android:text="Name"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:layout_marginRight="260dp"
            android:layout_toLeftOf="@+id/txtNetSales"
            android:textColor="@color/txt_color" />

        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/txtPlanSales"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="190dp"
            android:layout_toLeftOf="@+id/txtNetSales"
            android:text="1234567"
            android:textColor="@color/txt_color"
            android:textSize="12sp" />

        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/txtNetSales"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:layout_toLeftOf="@+id/rel"
            android:text="1234567"
            android:textColor="@color/txt_color"
            android:textSize="12sp" />


        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/rel"
            android:layout_width="120dp"
            android:layout_height="30dp">


            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/innerrellay"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="10dp">

                <TextView
                    android:id= "@+id/txtPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    />

                <TextView
                    android:layout_marginBottom="2dp"
                    android:layout_centerVertical="true"
                    android:id= "@+id/txtAchieve"
                    android:background="@color/txt_color"
                    android:layout_width="5dp"
                    android:layout_height="29dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>