<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txtarticleOption"
        android:text="@string/article_option"
        android:textSize="15sp"
        android:textColor="@color/bg_store_code_text"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@id/linearLayout"
        android:orientation="vertical"
        android:layout_below="@+id/txtarticleOption"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Style Performance"
                android:background="@color/smdm_divider_Black"
                android:padding="5dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/bg_store_code_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="@color/smdm_divider_Black"
                android:layout_height="1dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/smdm_divider_Black_light"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1.3"
                        android:text="TW Sls"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="0.7"
                        android:id="@+id/txtSales"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/smdm_default_color"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="1.1"
                        android:text="SellThru%"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.9"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:textColor="@color/smdm_default_color"
                        android:id="@+id/txtSalesThruUnit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="8dp"
                    android:background="@color/smdm_divider_Black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1.3"
                        android:text="TW Sls(U)"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_weight="0.7"
                        android:id="@+id/txtSalesUnit"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/smdm_default_color"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="1.1"
                        android:text="ROS(U)"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="0.9"
                        android:id="@+id/txtRos"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="8dp"
                    android:background="@color/smdm_divider_Black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1.3"
                        android:text="FWC"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:layout_weight="0.7"
                        android:id="@+id/txtFwdCover"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/smdm_default_color"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1.1"
                        android:text="SOH(U)"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="0.9"
                        android:id="@+id/txtSOh"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:textColor="@color/smdm_default_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginRight="8dp"
                    android:background="@color/smdm_divider_Black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1.3"
                        android:text="GIT(U)"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/smdm_default_color"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_weight="2.7"
                        android:id="@+id/txtGit"
                        android:layout_width="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/smdm_default_color"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->
        <TextView
            android:layout_width="match_parent"
            android:background="@color/smdm_divider_Black"
           android:layout_height="1.5dp" />
    </LinearLayout>
    <!--second layout starting    -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/bg_screen_color"
        android:layout_below="@+id/linearLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/promoCat"
            android:layout_marginTop="10dip"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <ScrollView
                android:layout_height="match_parent"
                android:scrollbars="horizontal|vertical"
                android:layout_width="match_parent"
                android:scrollbarStyle="outsideInset"
                android:fillViewport="true"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearTable"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen_color"
        android:id="@+id/style_loadingBar"
        android:visibility="visible"
        >

        <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:background="#0000"
            android:keepScreenOn="true"
            android:theme="@color/colorPrimary"
            >

        </ProgressBar>


    </RelativeLayout>

</RelativeLayout>
