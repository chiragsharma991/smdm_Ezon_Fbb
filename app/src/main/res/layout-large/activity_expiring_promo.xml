<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    tools:context="apsupportapp.aperotechnologies.com.designapp.StyleActivity">


    <LinearLayout
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#80000000"
        android:id="@+id/rankLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relrankLayout"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/relpopuplayout"
                android:layout_marginTop="150dp"
                android:background="@drawable/popup_border"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/relimgclose"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp">


                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:clickable="false"
                        android:background="@mipmap/pop_up_close_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="40dp"
                    android:text="Rank"
                    android:gravity="center"
                    android:textColor="@color/text_sales"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rank"/>


                <View
                    android:layout_margin="5dp"
                    android:id="@+id/div1"
                    android:layout_below="@+id/rank"
                    android:background="@color/text_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <TextView
                    android:id="@+id/txtsales"
                    android:layout_below="@+id/div1"
                    android:layout_margin="5dp"
                    android:text="Selected filter sales / Total Store fashion Sales"
                    android:gravity="center"
                    android:textColor="@color/text_sales"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/div2"
                    android:layout_below="@+id/txtsales"
                    android:background="@color/text_grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <LinearLayout
                    android:id="@+id/zonalnational"
                    android:orientation="horizontal"
                    android:layout_below="@+id/div2"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/darker_grey"
                        android:textSize="14sp"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:layout_marginTop="20dp"
                        android:text="Zonal Rank"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:layout_marginTop="20dp"
                        android:text="National Rank"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/sales"
                    android:orientation="horizontal"
                    android:layout_below="@+id/zonalnational"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_weight="1"
                        android:text="Sales"
                        android:textColor="@color/text_sales"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtZonalSales"
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:text="4"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtNationalSales"
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:text="10"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/YOY"
                    android:orientation="horizontal"
                    android:layout_below="@+id/sales"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:text="YOY Growth%"
                        android:gravity="left"
                        android:textColor="@color/text_sales"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtZonalYOY"
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:text="4"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtNationalYOY"
                        android:layout_weight="1"
                        android:layout_below="@+id/div1"
                        android:text="10"
                        android:gravity="center"
                        android:textColor="@color/text_sales"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_below="@+id/YOY"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


            </RelativeLayout>


            <ImageView
                android:layout_marginTop="120dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/pop_up_icon"
                android:layout_width="59dp"
                android:layout_height="59dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_header_height"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                segmentedgroup:contentInsetLeft="0dp"
                segmentedgroup:contentInsetStart="0dp"
                segmentedgroup:contentInsetRight="0dp"
                segmentedgroup:contentInsetEnd="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_marginLeft="0dp"
                        android:id="@+id/exp_imageBtnBack"
                        android:background="@drawable/button_red_effect"
                        android:layout_width="@dimen/header_clickable_width"
                        android:layout_height="@dimen/header_clickable_height"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">

                        <Button
                            android:clickable="false"
                            android:background="@mipmap/common_back_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiring Promo"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/exp_imageBtnBack"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ffffff"
                        android:id="@+id/toolbar_title" />



                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:id="@+id/exp_imgfilter"
                        android:background="@drawable/button_red_effect"
                        android:layout_width="@dimen/header_clickable_width"
                        android:layout_height="@dimen/header_clickable_height"
                        android:layout_centerVertical="true">

                        <Button
                            android:clickable="false"
                            android:background="@mipmap/filter_icon_nav"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>



                    <!--<RelativeLayout-->
                    <!--android:id="@+id/imageBtnSearch"-->
                    <!--android:background="@drawable/button_red_effect"-->
                    <!--android:layout_width="@dimen/header_clickable_width"-->
                    <!--android:layout_height="@dimen/header_clickable_height"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true">-->

                    <!--<Button-->
                    <!--android:clickable="false"-->
                    <!--android:background="@mipmap/key_product_search_icon1"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_centerInParent="true"/>-->

                    <!--</RelativeLayout>-->



                </RelativeLayout>
            </android.support.v7.widget.Toolbar>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp">


                <TextView
                    android:id="@+id/tstoreCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store : "
                    android:textColor="#920609"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtStoreCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tstoreCode"
                    android:hint=""
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/txtStoreCode"
                    android:hint=""
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                >


                <RelativeLayout
                    android:id="@+id/promoSalesRelative"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/salescard">


                    <TextView
                        android:id="@+id/promoSales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Promo Sales"
                        android:textSize="14sp" />

                    <TextView
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:id="@+id/txt_exp_PromoVal1"
                        android:layout_width="match_parent"
                        android:layout_alignBaseline="@+id/promoSales"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_alignBottom="@+id/promoSales"
                        android:layout_toEndOf="@+id/promoSales" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/promoSalesURelative"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/salescard">


                    <TextView
                        android:id="@+id/txtNetSales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Promo Sales (U)"
                        android:textSize="14sp" />

                    <TextView
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:id="@+id/txt_exp_PromoVal2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtNetSales"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_alignBottom="@+id/txtNetSales"
                        android:layout_toEndOf="@+id/txtNetSales" />

                </RelativeLayout>









            </LinearLayout>










        </LinearLayout>



        <LinearLayout
            android:id="@+id/llayoutSalesAnalysis"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <!--bottom layout starting-->

            <RelativeLayout
                android:id="@+id/relTablelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/llheader"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/bg_salescard">





                        <TextView
                            android:id="@+id/promotionName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="272dp"
                            android:gravity="center_vertical|center"
                            android:text="Promotion Name"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <!--</RelativeLayout>-->




                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="188dp"
                            android:layout_toLeftOf="@+id/endDate"
                            android:gravity="center_vertical|center"
                            android:text="Start Date"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"/>


                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="110dp"
                            android:layout_toLeftOf="@+id/days"
                            android:gravity="center_vertical|center"
                            android:text="End Date"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                        <TextView
                            android:id="@+id/days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="62dp"
                            android:layout_toLeftOf="@+id/vm"
                            android:gravity="center_vertical|center"
                            android:text="Days"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />



                        <TextView
                            android:id="@+id/vm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:gravity="center_vertical|center"
                            android:text="VM"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            />



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/bg_salescard"
                        >

                        <EditText
                            android:editable="false"
                            android:padding="2dp"
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="255dp"
                            android:layout_marginLeft="3dp"
                            android:layout_toLeftOf="@+id/edt_startdate"
                            android:background="@drawable/border"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black" />


                        <EditText
                            android:editable="false"
                            android:paddingRight="2dp"
                            android:id="@+id/edt_startdate"
                            android:layout_width="75dp"
                            android:clickable="false"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="178dp"
                            android:layout_toLeftOf="@+id/edt_Enddate"
                            android:background="@drawable/border"
                            android:gravity="center_vertical" />


                        <EditText

                            android:id="@+id/edt_Enddate"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:clickable="false"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="102dp"
                            android:layout_toLeftOf="@+id/edt_days"
                            android:background="@drawable/border"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:editable="false"
                            android:id="@+id/edt_days"
                            android:layout_width="48dp"
                            android:layout_height="30dp"
                            android:clickable="false"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="52dp"
                            android:layout_toLeftOf="@+id/edt_vm"
                            android:background="@drawable/border"
                            android:textColor="@android:color/black" />


                        <EditText
                            android:editable="false"
                            android:id="@+id/edt_vm"
                            android:layout_width="48dp"
                            android:clickable="false"
                            android:layout_height="30dp"
                            android:layout_marginRight="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/border"
                            android:textColor="@android:color/black" />


                    </RelativeLayout>

                </LinearLayout>


                <ListView
                    android:id="@+id/expireListview"
                    android:dividerHeight="0dp"
                    android:divider="@null"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:smoothScrollbar="true"
                    >

                </ListView>



            </RelativeLayout>

            <!--bottom layout-->

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>

