<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bst_cardView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:elevation="10dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="18dp"



            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:src="@mipmap/best_worst_promo"
                android:id="@+id/bst_image_child"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/bst_image_child"
                >

                <!--Buy one-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity=""
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bst_head_child"
                        android:hint="Buy One Get One"
                        android:textColor="#000000"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/bst_lineOne_child"
                        android:background="@color/divider_salescard"
                        android:layout_alignStart="@+id/bst_head_child"
                        android:layout_marginTop="10dp"
                        />


                    <!--Promo sales-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bst_PromoSales_child"
                            android:hint="Promo Sales:\t\t\t\t\t"
                            android:textColor="#000000"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bst_PromoValues_child"
                            android:hint="20,000"

                            />



                    </LinearLayout>



                    <!--Promo Sales(U)-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bst_PromoSalesU_child"
                            android:hint="Promo Sales(U):\t\t\t"
                            android:textColor="#000000"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bst_PromoValuesU_child"
                            android:hint="20,000"

                            />



                    </LinearLayout>







                </LinearLayout>




            </RelativeLayout>









        </RelativeLayout>

    </android.support.v7.widget.CardView>








</RelativeLayout>