<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="apsupportapp.aperotechnologies.com.designapp.PromoAnalysis.VM">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_marginLeft="0dp"
                android:id="@+id/vm_ImageBtnBack"
                android:background="@drawable/button_red_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <Button
                    android:clickable="false"
                    android:background="@mipmap/common_back_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VM"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/vm_ImageBtnBack"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:id="@+id/toolbar_title" />



            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:id="@+id/rp_imgfilter"
                android:background="@drawable/button_red_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_centerVertical="true">



            </RelativeLayout>



            <!--<RelativeLayout-->
            <!--android:id="@+id/imageBtnSearch"-->
            <!--android:background="@drawable/button_red_effect"-->
            <!--android:layout_width="@dimen/header_clickable_width"-->
            <!--android:layout_height="@dimen/header_clickable_height"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true">-->

            <!--<Button-->
            <!--android:clickable="false"-->
            <!--android:background="@mipmap/key_product_search_icon1"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_centerInParent="true"/>-->

            <!--</RelativeLayout>-->



        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <GridView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_below="@+id/toolbar"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:layout_margin="5dp"
        android:id="@+id/vmGrid"



        >

    </GridView>



</RelativeLayout>
