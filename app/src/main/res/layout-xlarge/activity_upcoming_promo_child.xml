<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <!--Name-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="2dp"
            android:id="@+id/relative1"
            android:background="@drawable/cell_shape"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="245dp"
            android:layout_marginLeft="0dp"
            android:layout_toLeftOf="@+id/relative2"
            android:gravity="center_vertical|start"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="name"
                android:textSize="@dimen/smdm_rowInflaterLayout_large"
                android:textColor="@color/txt_color"
                android:id="@+id/txt_up_PromoName"

                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>



        <!--startDate-->

        <RelativeLayout
            android:paddingRight="2dp"
            android:id="@+id/relative2"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:background="@drawable/cell_shape"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="162dp"
            android:layout_toLeftOf="@+id/relative3"
            android:gravity="center_vertical"



            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:text="02/09/93"
                android:textSize="@dimen/smdm_rowInflaterLayout_large"
                android:textColor="@color/txt_color"
                android:id="@+id/txt_up_startDate"

                />



        </RelativeLayout>




        <!--EndDate-->

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="81dp"
            android:background="@drawable/cell_shape"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="82dp"
            android:layout_toLeftOf="@+id/relative5"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="02/09/93"
                android:id="@+id/txt_up_EndDate"
                android:gravity="center"
                android:textSize="@dimen/smdm_rowInflaterLayout_large"
                android:textColor="@color/txt_color"
                />




        </RelativeLayout>







        <!--VM-->

        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="83dp"
            android:layout_height="30dp"
            android:background="@drawable/cell_shape"
            android:layout_marginRight="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/up_imgVm"

                android:src="@mipmap/filter_planclass_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"

                />




        </RelativeLayout>











    </RelativeLayout>

</LinearLayout>