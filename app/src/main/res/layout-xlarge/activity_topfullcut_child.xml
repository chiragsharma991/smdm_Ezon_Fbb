<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/bst_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/bst_Rel_image_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/top_image_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:src="@mipmap/placeholder"

                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bst_Rel_image_child"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/bst_Rel_image_child"
            android:gravity="center_horizontal">

            <!--Buy one-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <!---->

                    <TextView
                        android:id="@+id/bst_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Buy One Get One"
                        android:textColor="#000000"
                        android:textSize="12sp"


                        />

                    <RelativeLayout
                        android:id="@+id/top_fav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"

                        >




                        <ToggleButton
                            android:id="@+id/toggle_top_fav"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/toggleswitch"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textOff=""
                            android:textOn=""

                            />


                    </RelativeLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/bst_lineOne_child"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/bst_head_child"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_salescard" />


                <!--Promo sales-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:text="SOH(U)"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/top_SOHU"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:text="100"
                        android:textSize="11sp" />

                </LinearLayout>


                <!--Promo Sales(U)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:text="Base Stock(U)"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/top_bstStockU"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:text="100"
                        android:textSize="11sp" />

                </LinearLayout>

                <!--ROS(U)-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:singleLine="true"
                        android:text="ROS(U)"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/top_RosU"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6"
                        android:singleLine="true"
                        android:text="5"
                        android:textSize="11sp" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>