<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/oe_txtPlanClass"
            android:text="Name"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="240dp"
            android:layout_toLeftOf="@+id/oe_txtOption"
            android:textColor="@android:color/black" />

        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/oe_txtOption"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="180dp"
            android:layout_toLeftOf="@+id/oe_txtOption_Perc"
            android:text="1234567"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/oe_txtOption_Perc"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="120dp"
            android:layout_toLeftOf="@+id/oe_txtSOH_U"
            android:text="1234567"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/oe_txtSOH_U"
            android:layout_marginRight="60dp"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/oe_txtSOH_Prec"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1234567"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:padding="2dp"
            android:singleLine="true"
            android:id="@+id/oe_txtSOH_Prec"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1234567"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>