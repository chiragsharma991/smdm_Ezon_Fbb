                <!--android:orientation="vertical">-->


                <!--<CheckBox-->
                <!--android:id="@+id/checkUpcoming"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="5"-->
                <!--android:buttonTint="@android:color/black"-->
                <!--android:focusable="true" />-->

                <!--</LinearLayout>-->
                <!--</LinearLayout>-->

                <View
                    android:id="@+id/bst_lineTwo_child2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider_salescard" />

            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/qfilter_Ageing"
                android:id="@+id/qfDoneLayout"
                android:layout_width="184dp"
                android:layout_marginLeft="15dp"
                android:layout_height="25dp"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/ezfb_Red"
                    android:clickable="false"
                    android:text="Done"
                    android:textColor="@color/ezfb_White"
                    android:textSize="@dimen/smdm_quickfilter_subtitle_normal" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>