<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_running_promo_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apsupportapp.aperotechnologies.com.designapp.RunningPromo.RunningPromoDetails">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <RelativeLayout
                android:layout_marginLeft="0dp"
                android:id="@+id/rpd_ImageBtnBack"
                android:background="@drawable/button_click_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <Button
                    android:clickable="false"
                    android:background="@mipmap/common_back_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:id="@+id/rp_imgfilter"
                android:background="@drawable/button_click_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_centerVertical="true">



            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promo Details"
                android:textSize="@dimen/smdm_header_title_normal"
                android:layout_marginLeft="20dp"
                android:textColor="@color/divider_salescard1"
                android:id="@+id/toolbar_title"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rpd_ImageBtnBack"
                android:layout_marginStart="20dp" />


            <!--<RelativeLayout-->
            <!--android:id="@+id/imageBtnSearch"-->
            <!--android:background="@drawable/button_click_effect"-->
            <!--android:layout_width="@dimen/header_clickable_width"-->
            <!--android:layout_height="@dimen/header_clickable_height"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true">-->

            <!--<Button-->
            <!--android:clickable="false"-->
            <!--android:background="@mipmap/key_product_search_icon1"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_centerInParent="true"/>-->

            <!--</RelativeLayout>-->



        </RelativeLayout>
    </android.support.v7.widget.Toolbar>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy One Get One"
        android:id="@+id/promoCat"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/bg_store_code_text"
        android:textSize="@dimen/smdm_store_title_normal"


        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/promoCat"
        android:layout_marginTop="10dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llheader"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimary">





            <TextView
                android:id="@+id/promotionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="320dp"
                android:gravity="center"
                android:text="MC"
                android:textStyle="bold"
                android:textColor="@color/divider_salescard1"
                android:textSize="@dimen/smdm_departmentTitle"
                />

            <!--</RelativeLayout>-->




            <TextView
                android:id="@+id/startDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="220dp"
                android:layout_toLeftOf="@+id/endDate"
                android:gravity="center_vertical|center"
                android:text="Promo Sales"
                android:textStyle="bold"
                android:textColor="@color/divider_salescard1"
                android:textSize="@dimen/smdm_departmentTitle"
                />


            <TextView
                android:id="@+id/endDate"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:layout_toLeftOf="@+id/vm"
                android:gravity="center_vertical|center"
                android:text="Promo\nSales(U)"
                android:textStyle="bold"
                android:textColor="@color/divider_salescard1"
                android:textSize="@dimen/smdm_departmentTitle"

                />




            <TextView
                android:id="@+id/vm"
                android:layout_width="77dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center"
                android:text="SOH(U)"
                android:textStyle="bold"
                android:textColor="@color/divider_salescard1"
                android:textSize="@dimen/smdm_departmentTitle"
                />




        </RelativeLayout>


        <ScrollView
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="match_parent"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearTable"
                android:orientation="vertical">









            </LinearLayout>


        </ScrollView>



    </LinearLayout>







</RelativeLayout>
