
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:id="@+id/soh"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext3">



            <TextView
                android:id="@+id/txtSOH2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:text="SOH(U)"
                android:textSize="12sp" />




            <TextView
                android:id="@+id/txtSOHUVal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:text="12,15,1215"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/git"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext3">


            <TextView
                android:id="@+id/txtGIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:text="GIT(U)"
                android:textSize="12sp" />




            <TextView
                android:id="@+id/txtGITVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:text="12,15,1215"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                 />

          </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:id="@+id/ROS"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext3">


            <TextView
                android:id="@+id/txtROS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:text="ROS(U)"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtROSVal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="35dp"
                android:text="12,15,1215"
                android:textColor="@android:color/black"
                android:textSize="16sp"
               />
         </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fwdwkcover"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext3">


            <TextView
                android:id="@+id/txtFwdWkCover2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:text="Fwd Wk Cover"
                android:textSize="12sp" />


             <TextView
                android:id="@+id/txtFwdWkCoverVal2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="8dp"
                 android:layout_marginTop="35dp"
                 android:text="12,15,1215"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>