<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sortPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <!--base layout for click anywhere-->

    <RelativeLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/rankLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/relrankLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">


                    <!--main pop up border-->

                    <LinearLayout
                        android:id="@+id/menuPopuplayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/popupmenu"
                        android:orientation="vertical"
                        android:paddingLeft="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/popSort"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Sort By"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"


                                />




                        </LinearLayout>

                        <TextView
                            android:id="@+id/bst_lineOne_child"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignStart="@+id/bst_head_child"
                            android:layout_marginTop="5dp"
                            android:background="@color/divider_salescard" />


                        <!--Promo Sales -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/popPromo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Promo Sales"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp"

                                    />




                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:gravity="end"
                                android:orientation="vertical">


                                <CheckBox
                                    android:focusable="true"
                                    android:id="@+id/checkPromoSale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:buttonTint="@android:color/black"


                                    />


                            </LinearLayout>


                        </LinearLayout>


                        <!--Promo Sales U-->


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/popPromoU"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Promo Sales(U)"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp"

                                    />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:gravity="end"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/checkPromoSaleU"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="5"
                                    android:buttonTint="@android:color/black"



                                    />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>