                        >

                    </ProgressBar>

                </RelativeLayout>
-->

                <RelativeLayout
                    android:id="@+id/relativeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal|center_vertical">

                    <!--Buy one-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.2"

                                >


                                <TextView
                                    android:id="@+id/target_option"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Buy One Get One "
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_large"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|top"
                                android:layout_weight="0.8"
                                >

                                <ToggleButton
                                    android:id="@+id/toggle_target_fav"
                                    android:layout_width="@dimen/icon_width"
                                    android:layout_height="@dimen/icon_height"
                                    android:background="@drawable/toggleswitch"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textOff=""
                                    android:textOn="" />


                            </LinearLayout>



                        </LinearLayout>


                        <!--sales layout-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="5dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:singleLine="true"
                                    android:textColor="@color/ezfb_black"
                                    android:text="SOH(U)"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:visibility="visible"
                                    android:text=":"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:id="@+id/target_SOH_U"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.4"
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textColor="@color/ezfb_black"
                                    android:text="100"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:singleLine="true"
                                    android:text="Ideal Stock"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:visibility="visible"
                                    android:textColor="@color/smdm_default_color"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:id="@+id/target_ROS_U"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.4"
                                    android:singleLine="true"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:singleLine="true"
                                    android:text="ROS(U)"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:visibility="visible"
                                    android:textColor="@color/smdm_default_color"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:id="@+id/target_ROS"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.4"
                                    android:singleLine="true"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.5"
                                    android:singleLine="true"
                                    android:text="Availability%"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:visibility="visible"
                                    android:textColor="@color/smdm_default_color"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                                <TextView
                                    android:id="@+id/target_Availability"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.4"
                                    android:singleLine="true"
                                    android:text="100"
                                    android:textStyle="bold"
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_normal"
                                    />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>



</RelativeLayout>