<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <android.support.v7.widget.CardView
            android:id="@+id/bst_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="5dp"
            app:cardBackgroundColor="@color/ezfb_White"
            app:cardElevation="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--
                <RelativeLayout
                    android:id="@+id/bst_Rel_image_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/floor_image_child"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="0dp"
                        android:scaleType="fitXY"
                        />

                    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/imageLoader_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#0000"
                        android:keepScreenOn="true"
                        android:padding="10dp"
                        android:theme="@style/ProgressBar"
                        >

                    </ProgressBar>

                </RelativeLayout>
-->

                <RelativeLayout
                    android:id="@+id/relativeTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal|center_vertical">

                    <!--Buy one-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.2"
                                >
                                <TextView
                                    android:id="@+id/target_option"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Buy One Get One "
                                    android:textColor="@color/ezfb_black"
                                    android:textSize="@dimen/smdm_inflator_subtitle_large"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal|top"
                                android:layout_weight="0.8"
                                >

                                <ToggleButton
                                    android:id="@+id/toggle_target_fav"
                                    android:layout_width="@dimen/icon_width"
                                    android:layout_height="@dimen/icon_height"
                                    android:background="@drawable/toggleswitch"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textOff=""
                                    android:textOn="" />
                            </LinearLayout>
                        </LinearLayout>

                        <!--sales layout-->


                        <LinearLayout
                            android:layout_width="252dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/relative1"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_sohnm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="SOH(U)"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"

                                        />

                                    <TextView
                                        android:layout_below="@+id/txt_sohnm"
                                        android:id="@+id/target_SOH_U"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:singleLine="true"
                                        android:text="100"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                                        android:textStyle="bold" />

                                </RelativeLayout>
                                <View
                                    android:layout_marginRight="20dp"
                                    android:id="@+id/target_view1"
                                    android:layout_toRightOf="@+id/relative1"
                                    android:layout_width="1dp"
                                    android:background="@color/smdm_divider_Black"
                                    android:layout_height="match_parent"></View>

                                <RelativeLayout
                                    android:layout_toRightOf="@+id/target_view1"
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_stknm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Ideal Stock"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large" />

                                    <TextView
                                        android:layout_below="@+id/txt_stknm"
                                        android:id="@+id/target_ROS_U"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:singleLine="true"
                                        android:text="100"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                                        android:textStyle="bold" />

                                </RelativeLayout>


                            </RelativeLayout>

                            <TextView
                                android:layout_marginRight="60dp"
                                android:id="@+id/bst_lineOne_child"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/smdm_inflater_divider"
                                android:layout_alignStart="@+id/bst_head_child"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/smdm_divider_Black" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_ros_nm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="ROS(U)"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large" />

                                    <TextView
                                        android:layout_below="@+id/txt_ros_nm"
                                        android:id="@+id/target_ROS"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:singleLine="true"
                                        android:text="100"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                                        android:textStyle="bold" />


                                </RelativeLayout>

                                <View
                                    android:layout_marginRight="20dp"
                                    android:layout_width="1dp"
                                    android:background="@color/smdm_divider_Black"
                                    android:layout_height="match_parent"></View>

                                <RelativeLayout
                                    android:layout_width="75dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_availability_nm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Availability%"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large" />

                                    <TextView
                                        android:layout_below="@+id/txt_availability_nm"
                                        android:id="@+id/target_Availability"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:singleLine="true"
                                        android:text="100"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                                        android:textStyle="bold" />

                                </RelativeLayout>
                                <View
                                    android:visibility="invisible"
                                    android:layout_width="1dp"
                                    android:background="@color/ezfb_black"
                                    android:layout_height="match_parent"></View>

                                <LinearLayout
                                    android:visibility="invisible"
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="ROS"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large" />

                                    <TextView
                                        android:id="@+id/bestInvent_RosU"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:singleLine="true"
                                        android:text="100"
                                        android:textColor="@color/ezfb_black"
                                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>



</RelativeLayout>