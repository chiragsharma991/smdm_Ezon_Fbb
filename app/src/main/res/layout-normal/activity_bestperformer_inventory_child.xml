<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/bst_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/ezfb_White"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/bst_Rel_image_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            >

            <ImageView
                android:id="@+id/bestInvent_image_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"

                />

            <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/progressPicaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#0000"
                android:keepScreenOn="true"
                android:padding="10dp"
                android:theme="@style/ProgressBar">

            </ProgressBar>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/bst_Rel_image_child"
            android:gravity="center_horizontal">

            <!--Buy one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <!---->

                    <TextView
                        android:id="@+id/bestInvent_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="Buy One Get One"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/smdm_inflator_title_normal"
                        />

                    <RelativeLayout
                        android:id="@+id/top_fav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">

                        <ToggleButton
                            android:id="@+id/toggle_bestInvent_fav"
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_centerInParent="true"
                            android:background="@drawable/toggleswitch"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textOff=""
                            android:textOn="" />

                    </RelativeLayout>
                </LinearLayout>
                <!--       <TextView
                           android:id="@+id/bst_lineOne_child"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/smdm_inflater_divider"
                           android:layout_alignStart="@+id/bst_head_child"
                           android:layout_marginTop="5dp"
                           android:background="@color/divider_salescard" />-->


                <!--sales layout-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Sales"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_Sale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="SOH"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_SOH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="GIT"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_GIT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/bst_lineOne_child"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/smdm_inflater_divider"
                        android:layout_alignStart="@+id/bst_head_child"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_salescard" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Sell Thru%"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_sellThru"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="FWC"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_FWC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="ROS"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large" />

                            <TextView
                                android:id="@+id/bestInvent_RosU"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="100"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/smdm_inflator_subtitle_large"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



                <!--Table layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"></LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>