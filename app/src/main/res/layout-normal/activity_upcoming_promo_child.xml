<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <!--Name-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="2dp"
            android:id="@+id/relative1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="245dp"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/relative2"
            android:gravity="center_vertical|start"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="name"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:id="@+id/txt_up_PromoName"

                />




        </RelativeLayout>



        <!--startDate-->

        <RelativeLayout
            android:paddingRight="2dp"
            android:id="@+id/relative2"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="163dp"
            android:layout_toLeftOf="@+id/relative3"
            android:gravity="center_vertical"



            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:text="02/09/93"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:id="@+id/txt_up_startDate"

                />



        </RelativeLayout>




        <!--EndDate-->

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="82dp"
            android:layout_toLeftOf="@+id/relative5"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="02/09/93"
                android:id="@+id/txt_up_EndDate"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                />




        </RelativeLayout>







        <!--VM-->

        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/up_imgVm"

                android:src="@mipmap/filter_planclass_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"

                />




        </RelativeLayout>











    </RelativeLayout>

</LinearLayout>