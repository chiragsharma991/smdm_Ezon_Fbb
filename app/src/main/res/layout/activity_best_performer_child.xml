<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bst_cardView"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bst_Rel_image_child"

            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY"
                android:id="@+id/bst_image_child"
                android:src="@mipmap/placeholder"

                />

            <!--    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/imgLoader_BstWorstPromo"
                    android:layout_centerInParent="true"
                    android:background="#0000"
                    android:keepScreenOn="true"
                    android:theme="@style/ProgressBar"
                    >

                </ProgressBar>-->

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/bst_Rel_image_child"
            android:layout_alignTop="@+id/bst_Rel_image_child"
            >
            <!--Buy one-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bst_head_child"
                    android:text="Buy One Get One "
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/smdm_inflator_title_normal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/smdm_inflater_divider"
                    android:id="@+id/bst_lineOne_child"
                    android:background="@color/divider_salescard"
                    android:layout_alignStart="@+id/bst_head_child"
                    android:layout_marginTop="10dp"
                    />


                <!--Promo sales-->


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.3"
                        android:text="Promo Sales"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_weight="0.1"
                        android:text=":"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.6"
                        android:id="@+id/bst_PromoValues_child"
                        android:text="Promo Sales"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--Promo Sales(U)-->

                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.3"
                        android:text="Promo Sales(U)"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.1"
                        android:text=":"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="0.6"
                        android:id="@+id/bst_PromoValuesU_child"
                        android:text="Promo Sales"
                        android:textSize="@dimen/smdm_inflator_subtitle_normal"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>