<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    >

    <LinearLayout
        android:id="@+id/lin_ez_menuPopup"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popupmenu"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ez_viewBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="View By"
                android:textColor="@color/ezfb_black"
                android:textStyle="bold"
                android:textSize="@dimen/smdm_PopUp_subtitle_normal"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_ez_view_child"
            android:layout_width="match_parent"
            android:layout_height="@dimen/smdm_popup_divider"
            android:layout_marginTop="5dp"
            android:background="@color/ezfb_black" />


        <!--Product -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/lin_ez_Product"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_ez_viewBy_Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    android:textSize="@dimen/smdm_PopUp_subtitle_normal"
                    android:textColor="@color/ezfb_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="end"
                android:orientation="vertical">

                <RadioButton
                    android:clickable="false"
                    android:focusable="true"
                    android:id="@+id/rb_ez_viewBy_ProductChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:buttonTint="@color/ezfb_Red"


                    />


            </LinearLayout>


        </LinearLayout>


        <!--Location-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/lin_ez_location"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_ez_viewBy_Locatn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ezfb_black"
                    android:text="Location"
                    android:textSize="@dimen/smdm_PopUp_subtitle_normal"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="end"
                android:orientation="vertical">

                <RadioButton
                    android:clickable="false"
                    android:id="@+id/rb_ez_viewBy_LocatnChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:checked="false"
                    android:buttonTint="@color/ezfb_Red"



                    />


            </LinearLayout>


