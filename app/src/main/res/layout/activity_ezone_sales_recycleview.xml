<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="310dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rel_ez_outer"
            android:id="@+id/txt_ez_sPvAValue"
            android:gravity="center"
            android:text=""
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="@dimen/normallayout_textsize"
            android:textColor="@color/txt_color"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/rel_ez_outer"
            android:layout_width="100dp"
            android:layout_height="30dp">


            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/rel_ez_inner"
                android:layout_marginLeft="5dp"
                android:layout_width="90dp"
                android:layout_height="10dp">

                <TextView
                    android:id= "@+id/txt_ez_sPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    />

                <TextView
                    android:id= "@+id/txt_ez_sAchieve"
                    android:background="@color/txt_color"
                    android:layout_width="5dp"
                    android:layout_height="29dp" />
            </RelativeLayout>




        </RelativeLayout>

        <TextView
            android:layout_marginRight="210dp"
            android:id="@+id/txt_ez_sName"
            android:text="Name"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="@dimen/normallayout_textsize"
            android:textColor="@color/txt_color"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/txtPvAValue"
            android:layout_alignBottom="@+id/txtPvAValue"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</LinearLayout>