<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:id="@+id/txt_ez_sName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/ezfbb_black"
            android:textSize="@dimen/normallayout_textsize"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:id="@+id/linear_pva"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/rel_ez_outer"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_weight="0.5">


                <RelativeLayout
                    android:id="@+id/rel_ez_inner"
                    android:layout_width="110dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/txt_ez_sPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/txt_ez_sAchieve"
                        android:layout_width="5dp"
                        android:layout_height="29dp"
                        android:background="@color/ezfbb_black" />
                </RelativeLayout>
            </RelativeLayout>


            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_ez_sPvAValue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/ezfbb_black"
                android:textSize="@dimen/normallayout_textsize" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>