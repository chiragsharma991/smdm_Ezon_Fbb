<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="3dp">

    <LinearLayout
        android:id="@+id/lin_trCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_layout"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/detail_optionLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Test"
                android:textColor="@color/bg_store_code_text"
                android:textSize="@dimen/smdm_store_title_normal"
                android:textStyle="bold"
                />


        </LinearLayout>


        <!--mid level layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Req.Qty"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_reqtyVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="19"
                    android:textColor="@color/smdm_default_color"
                    android:textSize="@dimen/normallayout_storesize"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avl.Qty"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_avlqtyVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="19"
                    android:textColor="@color/smdm_default_color"
                    android:textSize="@dimen/normallayout_storesize"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOH"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_sohVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="19"
                    android:textColor="@color/smdm_default_color"
                    android:textSize="@dimen/normallayout_storesize"
                    />


            </LinearLayout>
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_weight="1.07"-->
            <!--&gt;-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="GIT"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="@dimen/normallayout_storesize"-->
            <!--android:textColor="@color/bg_store_code_text"/>-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="19"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:textSize="@dimen/normallayout_storesize"-->
            <!--android:id="@+id/txt_gitVal"-->
            <!--android:textColor="@color/smdm_default_color"-->
            <!--/>-->


            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Scan Qty"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_scanqtyVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="19"
                    android:textColor="@color/smdm_default_color"
                    android:textSize="@dimen/normallayout_storesize"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.09"
                android:gravity="left"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOH"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textStyle="bold"
                    android:visibility="invisible"/>


