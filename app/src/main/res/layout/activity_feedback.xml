<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apsupportapp.aperotechnologies.com.designapp.Feedback.Feedback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_header_height"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            segmentedgroup:contentInsetLeft="0dp"
            segmentedgroup:contentInsetStart="0dp"
            segmentedgroup:contentInsetRight="0dp"
            segmentedgroup:contentInsetEnd="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/feedback_BtnBack"
                    android:layout_width="@dimen/header_clickable_width"
                    android:layout_height="@dimen/header_clickable_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/button_red_effect">

                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/common_back_icon"
                        android:clickable="false" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/feedback_BtnBack"
                    android:text="Feedback"
                    android:textColor="@color/divider_salescard1"
                    android:textSize="@dimen/smdm_header_title_large" />


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedback_storeCode"
                    android:padding="5dp"
                    android:textSize="@dimen/collaboration_stock_storecode"
                    android:text="Store Code"
                    android:textColor="@color/bg_store_code_text"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedback_storeDes"
                    android:padding="5dp"
                    android:textSize="@dimen/collaboration_stock_storecode"
                    android:text="Store description"
                    android:textColor="@color/bg_store_code_text"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/feedback_storeCode"
                    />
                
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_below="@+id/feedback_storeCode"
                    android:id="@+id/feedback_image"
                    android:src="@mipmap/img_placeholder"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedback_question"
                    android:padding="15dp"
                    android:textSize="@dimen/collaboration_stock_storecode"
                    android:text="Why Sales is slow?"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:layout_alignParentBottom="true"
                    />



            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Fitting"
                        android:id="@+id/fitting"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Pricing"
                        android:id="@+id/pricing"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Colours"
                        android:id="@+id/colours"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Prints"
                        android:id="@+id/prints"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Styling"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        android:id="@+id/styling"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Fabric Quality"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        android:id="@+id/fabric_quality"
                        />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border1"
                        android:layout_margin="5dp"
                        android:text="Garment Quality"
                        android:textColor="@color/bg_store_code_text"
                        android:textAllCaps="false"
                        android:id="@+id/garment_quality"
                        />

                </LinearLayout>





            </ScrollView>




        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
