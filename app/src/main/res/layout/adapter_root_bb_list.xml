<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView
            android:id="@+id/bst_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/ezfb_White"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:contentPadding="3dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_layout"

                >

                <RelativeLayout
                    android:id="@+id/bst_Rel_image_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/subcategory_root_image"
                        android:layout_width="95dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="0dp"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/placeholder"
                        android:transitionName="details"
                        android:scaleType="centerCrop"

                        />

              <!--      <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/progressPicaso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#0000"
                        android:keepScreenOn="true"
                        android:padding="10dp"
                        android:theme="@style/ProgressBar">

                    </ProgressBar>-->

                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/text_part"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/bst_Rel_image_child"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/subcategory_root_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy One Get One "
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/smdm_inflator_subtitle_large"
                        />

                    <!--Buy one-->
                </RelativeLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>