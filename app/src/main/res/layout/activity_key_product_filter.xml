<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/bg_screen_color"
              tools:context="apsupportapp.aperotechnologies.com.designapp.ProductInformation.StyleActivity">




    <android.support.v7.widget.Toolbar
        android:id="@+id/keyproduct_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_marginLeft="0dp"
                android:id="@+id/keyprodfilter_btnBack"
                android:background="@drawable/button_click_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <Button
                    android:clickable="false"
                    android:background="@mipmap/common_back_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prod_filter"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/keyprodfilter_btnBack"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:id="@+id/toolbar_title" />


            <RelativeLayout
                android:id="@+id/keyproduct_btnfilterdone"
                android:background="@drawable/button_click_effect"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <Button
                    android:clickable="false"
                    android:background="@mipmap/filter_done"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>



        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">


        <EditText
            android:layout_marginRight="60dp"
            android:background="@android:color/transparent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Enter text"
            android:layout_marginLeft="10dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            style="@style/myEditText"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:layout_weight="9"
            android:id="@+id/keyprodfilter_editSearch" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/keyprodfilter_linear"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <ListView
            android:id="@+id/keyproduct_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>


    </LinearLayout>

</LinearLayout>