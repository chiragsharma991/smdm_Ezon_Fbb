<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbars="none"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<include layout="@layout/table_sample"/>-->


            <LinearLayout
            android:id="@+id/lin_table"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >


                <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Auditor Name"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Overall Audit Score"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fashion quotient(display looks fashionable)"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fashion quotient(display looks fashionable)"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" >


            <TextView
                android:id="@+id/txt_fbbstorecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:text="FBB 001"/>

            <TextView
                android:id="@+id/txt_fbbstorename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/ezfb_black"
                android:text="FBB - ABC Mall"/>

            <TextView
                android:id="@+id/txt_fbbstoreloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/ezfb_black"
                android:text="Kandivali, Mumbai 400008"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="110dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/ezfb_black"
                    android:text="Audit 1"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="21 June 16"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/ezfb_black"
                    android:text="Sameer Singh"/>

                <TextView
                    android:id="@+id/txt_place"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="IMRB"/>

            </LinearLayout>


            <TextView
                android:id="@+id/txt_score"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ezfb_black"
                android:text="3.2"/>



            <TextView
                android:id="@+id/txt_fashion"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ezfb_black"
                android:text="4"/>

            <TextView
                android:id="@+id/txt_display"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ezfb_black"
                android:text="5"/>

        </LinearLayout>

        </LinearLayout>


    </HorizontalScrollView>



</LinearLayout>