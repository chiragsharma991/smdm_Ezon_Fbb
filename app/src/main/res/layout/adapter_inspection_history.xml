<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <android.support.v7.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_zonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_zone_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="Zonal "
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_avg_rating"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="5dp"
                android:text="4.5"
                android:textSize="18sp"
                android:textColor="@color/ezfbb_red"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_1"
                android:layout_marginTop="6dp"
                android:text="Average Overall Rating :  "
                android:textSize="13sp"
                android:layout_toRightOf="@+id/txt_zone_name"
                android:layout_toLeftOf="@+id/txt_avg_rating"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/txt_audit_done"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_avg_rating"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:text="Audit done in : 0"
                android:textSize="13sp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:id="@+id/txt_2"-->
                <!--android:layout_marginBottom="6dp"-->
                <!--android:layout_below="@+id/txt_avg_rating"-->
                <!--android:text="Audit done in : "-->
                <!--android:textSize="13sp"-->
                <!--android:layout_toRightOf="@+id/txt_zone_name"-->
                <!--android:layout_toLeftOf="@+id/txt_audit_done"-->
                <!--android:gravity="right"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:visibility="gone"
                android:layout_below="@+id/rel_zonal"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/smdm_divider_Black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rel_count"
                android:visibility="gone"
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_count_fg_audit"
                    android:layout_marginTop="6dp"
                    android:text="Count of FG Audit : 0"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_count_external_audit"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/txt_count_fg_audit"
                    android:text="Count of External Agency Audit : 0"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/btn_view_details"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/ezfbb_red"
                    android:layout_marginTop="8dp"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_width="120dp"
                    android:layout_height="40dp" />


            </RelativeLayout>


        </RelativeLayout>





    </android.support.v7.widget.CardView>


    </RelativeLayout>