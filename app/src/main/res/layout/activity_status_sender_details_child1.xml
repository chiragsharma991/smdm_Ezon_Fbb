<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_trCard"
        android:background="@drawable/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true">
            <!--Main linear vertical-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LKM - Pink 100"
                    android:typeface="normal"
                    android:textStyle="bold"
                    android:id="@+id/statusSender_detail_optionLevel"
                    android:textSize="@dimen/normallayout_storesize"
                    android:textColor="@color/bg_store_code_text"/>

                <!--First Linear layout row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:gravity="center_vertical"
                    android:weightSum="3.8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:visibility="visible"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/bg_store_code_text"/>


                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.01"
                       >

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/req_qty"
                            android:typeface="normal"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/bg_store_code_text"
                           />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_marginLeft="15dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_qty"
                            android:textStyle="bold"
                            android:typeface="normal"
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/bg_store_code_text"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:gravity="left"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/normallayout_storesize"
                            android:singleLine="true"
                            android:textColor="@color/txt_color"
                            />

                    </LinearLayout>

                </LinearLayout>
                <!--Second Linear layout row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="3.8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:visibility="visible"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/txt_color"/>


                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.01"
                       >

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/txt_color"
                            android:id="@+id/status_sender_detail_reqQty"/>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"

                        >

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/status_sender_detail_ScanedQty"
                            android:textSize="@dimen/normallayout_storesize"
                            android:textColor="@color/txt_color"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:gravity="left"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/normallayout_storesize"
                            android:singleLine="true"
                            android:textColor="@color/txt_color"
                            />

                    </LinearLayout>



                </LinearLayout>

                <!--hidden layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/StatusDetailChild_size"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/smdm_divider_Black"
                        >

                    </View>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/StatusSenderdetails_SubChild"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

                    </LinearLayout>
                </LinearLayout>
                <!--hidden layout ending-->
            </LinearLayout>
            <!--Main layout ending-->
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>