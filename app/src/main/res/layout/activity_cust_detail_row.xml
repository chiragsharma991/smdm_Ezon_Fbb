<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/rel_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_cust_name_Val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/txt_cust_lastVisit_Val"
        android:text=""
        android:textColor="@color/txt_color"
        android:textSize="@dimen/smdm_departmentTitleLarge"
        android:textStyle="normal" />

    <TextView

        android:id="@+id/txt_cust_lastVisit_Val"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center|center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="190dp"
        android:layout_toLeftOf="@+id/txt_cust_ach_Val"
        android:text=""
        android:textColor="@color/txt_color"
        android:textSize="@dimen/smdm_departmentTitleLarge"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_cust_ach_Val"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="130dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txt_cust_planSales_Val"
        android:gravity="center|center_vertical"
        android:text=""
        android:textColor="@color/txt_color"
        android:textSize="@dimen/smdm_departmentTitleLarge"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_cust_planSales_Val"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@+id/txt_cust_sales"
        android:gravity="center|center_vertical"
        android:text=""
        android:textColor="@color/txt_color"
        android:textSize="@dimen/smdm_departmentTitleLarge"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/txt_cust_sales_Val"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center|center_vertical"
        android:text=""
        android:textColor="@color/txt_color"
        android:textSize="@dimen/smdm_departmentTitle"
        android:textStyle="normal" />

    </RelativeLayout>
    <View
        android:id="@+id/view_legend"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/smdm_divider_Black">

    </View>
</LinearLayout>