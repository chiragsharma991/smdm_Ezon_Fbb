<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_cust_name_Val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/txt_cust_lastVisit_Val"
            android:hint=""
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/smdm_departmentTitleLarge"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_cust_lastVisit_Val"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="200dp"
            android:layout_toLeftOf="@+id/txt_cust_planSales_Val"
            android:gravity="center_vertical|center"
            android:hint=""
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/smdm_departmentTitleLarge"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/txt_cust_planSales_Val"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="130dp"
            android:layout_toLeftOf="@+id/txt_cust_sales_Val"
            android:gravity="center_vertical|center"
            android:hint=""
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/smdm_departmentTitleLarge"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/txt_cust_sales_Val"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="65dp"
            android:layout_toLeftOf="@+id/txt_cust_ach_Val"
            android:gravity="center_vertical|center"
            android:hint=""
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/smdm_departmentTitleLarge"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_cust_ach_Val"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center"
            android:hint=""
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/smdm_departmentTitleLarge"
            android:textStyle="normal" />

    </RelativeLayout>


</LinearLayout>