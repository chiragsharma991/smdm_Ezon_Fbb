<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_engagement_type_nm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rel_engagemnt_nm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_color_engagemnt_nm"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/txt_engagementnm_Val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_color_engagemnt_nm"
                android:text=""
                android:textColor="@color/bg_store_code_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_pending_Val"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:gravity="right"
                android:hint="Pending 500/600"
                android:textColor="@color/smdm_red"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_cust_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_search_listheader"
        android:background="@color/bg_screen_color"></android.support.v7.widget.RecyclerView>

    <LinearLayout

        android:id="@+id/rel_search_listheader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:background="#e3e4e5"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
            android:layout_margin="9dp"
            android:id="@+id/linear_searchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:weightSum="2">

            <EditText
                android:id="@+id/edt_cust_Search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.9"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:padding="2dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imgBtn_Search"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:background="@mipmap/ic_search_black_24dp"
                android:visibility="visible" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/bg_screen_color"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:background="#e3e4e5"
           android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
           android:layout_gravity="center_vertical"
            android:id="@+id/rel_list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/txt_cust_lastVisit"
                android:text="Name"
                android:textColor="@color/smdm_light_Black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_lastVisit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="190dp"
                android:layout_toLeftOf="@+id/txt_cust_ach"
                android:gravity="center|center_vertical"
                android:text="Last\nVisit"
                android:textColor="@color/smdm_light_Black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_ach"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="130dp"
                android:layout_toLeftOf="@+id/txt_cust_planSales"
                android:gravity="center|center_vertical"
                android:text="Ach%"
                android:textColor="@color/smdm_light_Black"
                android:textSize="@dimen/smdm_cardValuesTitle_large"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_planSales"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dp"
                android:layout_toLeftOf="@+id/txt_cust_sales"
                android:gravity="center|center_vertical"
                android:text="Plan\nSales"
                android:textColor="@color/smdm_light_Black"
                android:textSize="@dimen/smdm_cardValuesTitle_large"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/txt_cust_sales"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center|center_vertical"
                android:text="Sales"
                android:textColor="@color/smdm_light_Black"
                android:textSize="@dimen/smdm_cardValuesTitle_large"
                android:textStyle="normal" />

        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

