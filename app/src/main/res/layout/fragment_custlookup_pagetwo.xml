<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_color"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_engagement_type_nm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_engagemnt_nm"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_color_engagemnt_nm"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/txt_engagementnm_Val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_color_engagemnt_nm"
                android:text=""
                android:textColor="@color/bg_store_code_text"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/txt_pending_Val"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:gravity="right"
                android:hint="Pending 500/600"
                android:textColor="@color/smdm_red"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_search_listheader"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/linear_engagement_type_nm"
        android:background="#e3e4e5"
        android:orientation="horizontal">

        <LinearLayout
            android:weightSum="2"
            android:id="@+id/linear_searchLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="@color/white">

            <EditText

                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:layout_weight="1.9"
                android:padding="2dp"
                android:id="@+id/edt_cust_Search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Search" />

            <ImageButton
                android:visibility="gone"
                android:background="@mipmap/ic_search_black_24dp"
                android:layout_weight=".1"
                android:id="@+id/imgBtn_Search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linear_searchLayout"
            android:id="@+id/rel_list_header"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/txt_cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/txt_cust_lastVisit"
                android:text="Name"
                android:textColor="@color/smdm_status_pending_color"
                android:textSize="@dimen/smdm_departmentTitleLarge"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_lastVisit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="200dp"
                android:layout_toLeftOf="@+id/txt_cust_ach"
                android:text="Last\nVisit"
                android:textColor="@color/smdm_status_pending_color"
                android:textSize="@dimen/smdm_departmentTitleLarge"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_ach"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="140dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_cust_planSales"
                android:gravity="center|center_vertical"
                android:text="Ach%"
                android:textColor="@color/smdm_status_pending_color"
                android:textSize="@dimen/smdm_departmentTitleLarge"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_cust_planSales"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"
                android:layout_toLeftOf="@+id/txt_cust_sales"
                android:gravity="center|center_vertical"
                android:text="Plan\nSales"
                android:textColor="@color/smdm_status_pending_color"
                android:textSize="@dimen/smdm_departmentTitleLarge"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/txt_cust_sales"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center|center_vertical"
                android:text="Sales"
                android:textColor="@color/smdm_status_pending_color"
                android:textSize="@dimen/smdm_departmentTitleLarge"
                android:textStyle="normal" />



         </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@color/bg_screen_color"
        android:id="@+id/lv_cust_details"
        android:layout_below="@+id/rel_search_listheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>

