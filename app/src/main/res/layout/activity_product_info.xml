<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ezfbb_activity_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stylemainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/linear_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_header_height"
                android:layout_alignParentTop="true"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/imageBtnBack"
                        android:layout_width="@dimen/header_clickable_width"
                        android:layout_height="@dimen/header_clickable_height"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/button_click">

                        <Button
                            android:layout_width="@dimen/arrow_back_icon_width"
                            android:layout_height="@dimen/arrow_back_icon_height"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_arrow_back_black"
                            android:clickable="false" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imageBtnBack"
                        android:text="Product Info"
                        android:textColor="@color/ezfbb_black"
                        android:textSize="20sp" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/linear_child_scan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Scan"
                    android:textColor="@color/ezfbb_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnBarcode"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@mipmap/barcodeicon"
                    android:gravity="center" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/ezfbb_black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="12dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/searchablespinnerlibraryStore"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:drawableRight="@mipmap/search_option_dropdown_arrow"
                android:gravity="left|center"
                android:layout_marginRight="70dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/ezfbb_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@color/ezfbb_red"></View>


            <TextView
                android:id="@+id/searchablespinnerlibrary"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:drawableRight="@mipmap/search_option_dropdown_arrow"
                android:gravity="left|center"
                android:layout_marginRight="70dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/ezfbb_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@color/ezfbb_red"></View>

            <TextView
                android:id="@+id/searchablespinnerlibrary1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:drawableRight="@mipmap/search_option_dropdown_arrow"
                android:gravity="left|center"
                android:layout_marginRight="70dp"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/ezfbb_black"
                android:textSize="16sp" />

            <Button
                android:text="Submit"
                android:textAllCaps="false"
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/ezfbb_red"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collectionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/ezfbb_activity_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Select Collection"
                android:textColor="@color/bg_store_code_text"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/searchCollection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/ezfbb_activity_background"
                android:drawableLeft="@mipmap/key_product_search_icon"
                android:drawablePadding="5dp"
                android:drawableTint="@color/ezfbb_black"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textColor="#666666"
                android:textCursorDrawable="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/smdm_divider_Black" />

            <ListView
                android:id="@+id/listCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/storeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/ezfbb_activity_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Select Store"
                android:textColor="@color/bg_store_code_text"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/searchStore"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/ezfbb_activity_background"
                android:drawableLeft="@mipmap/key_product_search_icon"
                android:drawablePadding="5dp"
                android:drawableTint="@color/ezfbb_black"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textColor="#666666"
                android:textCursorDrawable="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/smdm_divider_Black" />

            <ListView
                android:id="@+id/listStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/optionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/ezfbb_activity_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Select Option"
                android:textColor="@color/ezfbb_black"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/searchOption"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/ezfbb_activity_background"
                android:drawableLeft="@mipmap/key_product_search_icon"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darker_grey"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textColor="#666666"
                android:textCursorDrawable="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/smdm_divider_Black" />

            <ListView
                android:id="@+id/listOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>