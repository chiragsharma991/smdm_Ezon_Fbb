<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3.8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="S"
                android:id="@+id/status_receiver_subdetail_size"
                android:textSize="@dimen/normallayout_storesize"
                android:textColor="@color/txt_color"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
           >

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10"
                android:layout_marginLeft="11dp"
                android:textSize="@dimen/normallayout_storesize"
                android:textColor="@color/txt_color"
                android:id="@+id/status_receiver_subdetail_shortQtyVal"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
                 >

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10"
                android:layout_marginLeft="16dp"
                android:id="@+id/status_receiver_subdetail_avlQtyVal"
                android:textSize="@dimen/normallayout_storesize"
                android:textColor="@color/txt_color"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:gravity="left"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/normallayout_storesize"
                android:singleLine="true"
                android:textColor="@color/txt_color"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>