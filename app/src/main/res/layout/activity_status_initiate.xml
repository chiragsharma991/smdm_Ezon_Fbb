<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doc No : "
            android:layout_below="@+id/linear"
            android:textSize="@dimen/stock_textsize_normal"
            android:id="@+id/doc_number"
            android:layout_alignParentLeft="true"
            android:textColor="@color/ezfb_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_below="@+id/linear"
            android:id="@+id/status_docNumber"
            android:textSize="@dimen/stock_textsize_normal"
            android:layout_toRightOf="@+id/doc_number"
            android:textColor="@color/ezfb_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QTY : "
            android:layout_below="@+id/linear"
            android:textSize="@dimen/stock_textsize_normal"
            android:layout_toLeftOf="@+id/status_qty"
            android:textColor="@color/ezfb_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="@dimen/stock_textsize_normal"
            android:layout_below="@+id/linear"
            android:id="@+id/status_qty"
            android:layout_centerHorizontal="true"
            android:textColor="@color/ezfb_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="@dimen/stock_textsize_normal"
            android:layout_below="@+id/linear"
            android:id="@+id/date"
            android:layout_toLeftOf="@+id/status_date"
            android:textColor="@color/ezfb_black"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/05/2017"
            android:textSize="@dimen/stock_textsize_normal"
            android:layout_below="@+id/linear"
            android:id="@+id/status_date"
            android:textColor="@color/ezfb_black"
            android:layout_alignParentRight="true"

            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/arrow">




        </LinearLayout>







    </RelativeLayout>





