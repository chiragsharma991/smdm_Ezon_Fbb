<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/alertdialog_rectangle"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_store_code_text"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Comment"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/smdm_border"
            >

        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/feedback_comment"
            android:lines="6"
            android:background="@android:color/transparent"
            android:minLines="6"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/bg_store_code_text"
            android:textSize="@dimen/collaboration_stock_storecode"
            android:textStyle="normal"
            android:textCursorDrawable="@null"
            android:hint="Please enter your comments"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/smdm_border"
            >

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/comment_skip"
                android:gravity="center_horizontal|center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="13dp"
                    android:text="SKIP"
                    android:textStyle="bold"
                    />



            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/smdm_border"
                >

            </View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/comment_ok"
                android:gravity="center_horizontal|center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bg_store_code_text"
                    android:textSize="13dp"
                    android:text="OK"
                    android:textStyle="bold"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>




</LinearLayout>