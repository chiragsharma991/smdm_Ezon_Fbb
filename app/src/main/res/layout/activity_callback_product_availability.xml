<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_callback__product_availability"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="apsupportapp.aperotechnologies.com.designapp.FeedbackofCustomer.AvailabilityAndNotifyHO.Callback_ProductAvailability">

    <LinearLayout
        android:id="@+id/linear_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_header_height"
            android:layout_alignParentTop="true"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:background="@drawable/button_click"
                    android:layout_marginLeft="0dp"
                    android:id="@+id/backButton"
                    android:layout_width="@dimen/header_clickable_width"
                    android:layout_height="@dimen/header_clickable_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <Button
                        android:clickable="false"
                        android:background="@mipmap/ic_arrow_back_black"
                        android:layout_width="@dimen/arrow_back_icon_width"
                        android:layout_height="@dimen/arrow_back_icon_height"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/callback_product_availability"
                    android:textColor="@color/ezfbb_black"
                    android:textSize="19sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backButton"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/toolbar_title" />

                <RelativeLayout
                    android:background="@drawable/button_click"
                    android:id="@+id/btn_More"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="60dp">

                    <Button
                        android:clickable="false"
                        android:layout_marginRight="5dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/product_availability_notify_me"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/button3" />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_store"
        android:layout_below="@+id/linear_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tstoreCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store"
            android:textColor="@color/ezfbb_black"
            android:textSize="@dimen/normallayout_storesize" />

        <TextView
            android:id="@+id/txtStoreCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tstoreCode"
            android:hint=""
            android:textColor="@color/ezfbb_black"
            android:textSize="@dimen/normallayout_storesize"
            />

        <TextView
            android:id="@+id/txtStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/txtStoreCode"
            android:hint=""
            android:textColor="@color/ezfbb_black"
            android:textSize="@dimen/normallayout_storesize" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="5dp"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_store">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:id="@+id/lin_ean_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="EAN number : "/>

                <TextView
                    android:id="@+id/txt_ean_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_store_number"
                android:layout_below="@+id/lin_ean_number"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Store number : "/>

                <TextView
                    android:id="@+id/txt_store_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_name"
                android:layout_below="@+id/lin_store_number"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name :"/>

            <TextView
                android:id="@+id/txt_cust_name"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:inputType="textCapWords"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>


            <TextView
                android:id="@+id/txt_number"
                android:layout_below="@+id/txt_cust_name"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer mobile number :"/>

            <TextView
                android:id="@+id/txt_mobile_number"
                android:layout_below="@+id/txt_number"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:inputType="phone"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/txt_brand"
                android:layout_below="@+id/txt_mobile_number"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Name :"/>

            <TextView
                android:id="@+id/txt_brand_name"
                android:layout_below="@+id/txt_brand"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:inputType="textCapWords"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <LinearLayout
                android:id="@+id/lin_product_name"
                android:layout_below="@+id/txt_brand_name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Product Name : "/>

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_size"
                android:layout_below="@+id/lin_product_name"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Size : "/>

                <TextView
                    android:id="@+id/txt_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_color"
                android:layout_below="@+id/lin_size"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="@string/callback_text_color"/>

                <TextView
                    android:id="@+id/txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_fit"
                android:layout_below="@+id/lin_color"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Fit : "/>

                <TextView
                    android:id="@+id/txt_fit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_style"
                android:layout_below="@+id/lin_fit"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Style : "/>

                <TextView
                    android:id="@+id/txt_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=" "/>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_callback_title"
                android:layout_below="@+id/lin_style"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do You want  a call  back ?"/>

            <TextView
                android:id="@+id/txt_callback"
                android:layout_below="@+id/txt_callback_title"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


            <TextView
                android:id="@+id/txt_remarks_title"
                android:layout_below="@+id/txt_callback"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks : "/>

            <TextView
                android:id="@+id/txt_remarks"
                android:layout_below="@+id/txt_remarks_title"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


            <LinearLayout
                android:id="@+id/lin_feedback_date"
                android:layout_below="@+id/txt_remarks"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/ezfb_black"
                    android:text="Feedback creation date : "/>

                <TextView
                    android:id="@+id/txt_feedback_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="@color/ezfb_black"
                    android:text=""/>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_email_title"
                android:layout_below="@+id/lin_feedback_date"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Triggered to CSD : "/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_below="@+id/txt_email_title"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/txt_sms_title"
                android:layout_below="@+id/txt_email"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS sent to customer : "/>

            <TextView
                android:id="@+id/txt_sms"
                android:layout_below="@+id/txt_sms_title"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/ezfb_black"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </RelativeLayout>
        </ScrollView>
</RelativeLayout>
