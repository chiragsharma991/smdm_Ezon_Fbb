<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lin_trCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/card_layout">

        <android.support.v7.widget.CardView
            android:id="@+id/tr_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rel_headertxtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:weightSum="6.8">


                    <TextView
                        android:id="@+id/txt_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:singleLine="true"
                        android:text="Option"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView

                        android:id="@+id/txt_reqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.98"
                        android:text="Req.Qty"
                        android:singleLine="true"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView
                        android:id="@+id/txt_avlqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_reqty"
                        android:layout_weight="1"
                        android:text="Avl.Qty"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView
                        android:id="@+id/txt_soh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.04"
                        android:text="SOH"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView
                        android:id="@+id/txt_git"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:text="GIT"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView
                        android:id="@+id/txt_scanqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:singleLine="true"
                        android:text="Scan Qty"
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                    <TextView
                        android:id="@+id/txt_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:text=""
                        android:textColor="@color/bg_store_code_text"
                        android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rel_headervaluetxtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:weightSum="6.8">

                    <TextView
                        android:id="@+id/txt_optionVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:singleLine="true"
                        android:text="Option"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <TextView
                        android:id="@+id/txt_reqtyVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.98"
                        android:text="Req Qty"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <TextView
                        android:id="@+id/txt_avlqtyVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Avl Qty"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <TextView
                        android:id="@+id/txt_sohVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.04"
                        android:text="SOH"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <TextView
                        android:id="@+id/txt_gitVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.05"
                        android:text="GIT"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <TextView
                        android:id="@+id/txt_scanqtyVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:singleLine="true"
                        android:text="Scan Qty"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/smdm_inflator_title_normal"/>

                    <LinearLayout
                        android:id="@+id/linearScan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/lin_imgbtnScan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:clickable="true">

                            <ImageButton
                                android:id="@+id/btn_scan"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center_horizontal"
                                android:background="@mipmap/scan_icon"
                                android:scaleType="fitXY"
                                />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_trBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="none"
                            android:textColor="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>


                <!--hidden layout-->
                <LinearLayout
                    android:id="@+id/tr_detail_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/smdm_divider_Black">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="6.8"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.77"
                            >


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.98"
                            >

                            <TextView
                                android:id="@+id/txt_detail_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size"
                                android:textColor="@color/bg_store_code_text"
                                android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.04"
                            android:gravity="left">
                            <TextView
                                android:id="@+id/txt_detail_reqty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Req.Qty"
                                android:singleLine="true"
                                android:textColor="@color/bg_store_code_text"
                                android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.05"
                            android:gravity="left">


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/txt_detail_scanqty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Scan Qty"
                                android:textColor="@color/bg_store_code_text"
                                android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="0.95"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/txt_detail_scan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Size"
                                android:textColor="@color/bg_store_code_text"
                                android:textSize="@dimen/smdm_PopUp_subtitle_normal"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/recycleview_transferreq_detailChild"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:scrollbars="vertical"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>