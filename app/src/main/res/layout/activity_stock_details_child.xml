<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="3dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/ezfb_White"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/lin_trCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/detail_headerCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_optionLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Test"
                android:textColor="@color/ezfb_black"
                android:textSize="@dimen/smdm_store_title_normal"
                android:textStyle="bold" />


        </LinearLayout>


        <!--mid level layout-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="6.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/detailChild_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/detailChild_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/normallayout_storesize"
                        android:visibility="invisible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.01"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/normallayout_storesize"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54"
                        android:textColor="@color/smdm_default_color"
                        android:textSize="@dimen/normallayout_storesize"
                        android:visibility="invisible" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".96">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/short_qty"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_reqQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt"
                        android:layout_marginTop="7dp"
                        android:gravity="center_horizontal"
                        android:text="15"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.03">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/soh"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_Soh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="19"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.04">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/git"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_Git"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:text="@string/avl_qty"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_AviQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="14"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9">

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:text="Sell Thru%"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_sellThru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="14"
                        android:textColor="@color/ezfb_black"
                        android:textSize="@dimen/normallayout_storesize" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <!--Hidden part-->

        <LinearLayout
            android:id="@+id/detail_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:id="@+id/view_border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/smdm_border">

            </View>

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/details_headerChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>