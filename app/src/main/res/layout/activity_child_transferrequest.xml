<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <!--starting from this-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="0dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="3dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentPadding="0dp"
            app:cardBackgroundColor="@color/ezfb_White"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">


                    <CheckBox
                        android:layout_alignBaseline="@+id/transferRequest_stockDesc"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/mcCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <!--<TextView-->
                        <!--android:id="@+id/transferRequest_stockCode"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_toRightOf="@+id/mcCheck"-->
                        <!--android:text="2663"-->
                        <!--android:layout_marginRight="2dp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:layout_marginBottom="8dp"-->
                        <!--android:textSize="@dimen/collaboration_stock_text"-->
                        <!--android:textColor="@color/ezfb_black"/>-->

                    <TextView
                        android:id="@+id/transferRequest_stockDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.5dp"
                        android:layout_toRightOf="@+id/mcCheck"
                        android:text="Malad"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toLeftOf="@+id/stock_transfer_status"
                        android:textSize="@dimen/collaboration_stock_text"
                        android:textColor="@color/ezfb_black"
                        />


                    <TextView

                        android:id="@+id/stock_transfer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pending"
                        android:textSize="@dimen/collaboration_stock_text"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/smdm_amber"
                        />

               <!--     <CheckBox
                        android:layout_alignBaseline="@+id/stock_McCodeDesc"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/stock_mcCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/stock_mcCheck"
                        android:id="@+id/stock_McCodeDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textSize="@dimen/collaboration_stock_title"
                        android:textColor="@color/ezfb_black"
                        android:text="2004-Knighthood Shift"
                        />


                    <TextView
                        android:id="@+id/stock_transfer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/collaboration_stock_text"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/smdm_amber"
                        />
-->

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@color/smdm_border"
                    >

                </View>


                <!--mid part-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:padding="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Case#"
                            android:gravity="left"
                            android:textSize="@dimen/collaboration_stock_text"
                            android:textColor="@color/ezfb_black"

                            />

                        <TextView
                            android:id="@+id/transferRequest_case"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="@dimen/collaboration_stock_title_xlarge"
                            android:layout_marginTop="7dp"
                            android:singleLine="true"
                            android:textColor="@color/ezfb_black"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/req_qty"
                            android:gravity="left"
                            android:textSize="@dimen/collaboration_stock_text"
                            android:textColor="@color/ezfb_black"

                            />

                        <TextView
                            android:id="@+id/stock_sohRequested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="@dimen/collaboration_stock_title_xlarge"
                            android:layout_marginTop="7dp"
                            android:singleLine="true"
                            android:textColor="@color/pink"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="left">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avl_qty"
                                android:gravity="center"
                                android:textSize="@dimen/collaboration_stock_text"
                                android:textColor="@color/ezfb_black"/>

                            <TextView
                                android:id="@+id/stock_avi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98"
                                android:layout_marginTop="7dp"
                                android:textSize="@dimen/collaboration_stock_title_xlarge"
                                android:singleLine="true"
                                android:textColor="@color/ezfb_black"
                                />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coll_options"
                                android:textSize="@dimen/collaboration_stock_text"
                                android:singleLine="true"
                                android:textColor="@color/ezfb_black"

                                />

                            <TextView
                                android:id="@+id/stock_numberOfOption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/ezfb_black"
                                android:textSize="@dimen/collaboration_stock_title_xlarge"
                                android:singleLine="true"
                                />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <!--ending part-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:background="@color/smdm_divider_Black_light"
                    android:padding="3dp"
                    >
                   <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/transferRequest_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Days"
                            android:textSize="@dimen/collaboration_stock_text"
                            android:textColor="@color/ezfb_black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            >
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>

</LinearLayout>