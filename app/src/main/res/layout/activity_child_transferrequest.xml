                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="5 Days"
                        android:textSize="@dimen/smdm_inflator_title_normal"
                        android:textColor="@color/txt_color"
                        />


                </LinearLayout>

