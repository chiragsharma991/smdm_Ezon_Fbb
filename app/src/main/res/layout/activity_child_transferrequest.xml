    <android.support.v7.widget.CardView
        android:id="@+id/transferRequest_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/linearHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/transferRequest_stockCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="2663"
                        android:textSize="@dimen/normallayout_textsize"
                        android:textColor="@color/bg_store_code_text"
                        />

                    <TextView
                        android:id="@+id/transferRequest_stockDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.5dp"
                        android:textSize="@dimen/normallayout_textsize"
                        android:layout_toRightOf="@+id/transferRequest_stockCode"
                        android:text="Malad"
                        android:textColor="@color/bg_store_code_text"
                        />


                    <TextView
                        android:id="@+id/stock_transfer_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/smdm_inflator_title_normal"
                        android:text="Pending"
                        android:textColor="@color/smdm_amber"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/smdm_border"
                    >

                </View>


                <!--staring weight-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:weightSum="6"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Case#"
                                android:textSize="@dimen/smdm_inflator_title_normal"
                                android:textColor="@color/txt_color"

                                />

                            <TextView
                                android:id="@+id/transferRequest_case"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="1"
                                android:textSize="@dimen/largelayout_storesize"
                                android:textColor="@color/text_sales"
                                />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.55"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Short Qty"
                                android:textSize="@dimen/smdm_inflator_title_normal"
                                android:textColor="@color/txt_color"

                                />

                            <TextView
                                android:id="@+id/transferRequest_reqty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="98"
                                android:textSize="@dimen/largelayout_storesize"
                                android:textColor="@color/smdm_red"
                                />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.55"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avl. Qty"
                                android:textSize="@dimen/smdm_inflator_title_normal"
                                android:textColor="@color/txt_color"

                                />

                            <TextView
                                android:id="@+id/transferRequest_avlqty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="03"
                                android:textSize="@dimen/largelayout_storesize"
                                android:textColor="@color/text_sales"
                                />


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="# Options"
                                android:textSize="@dimen/smdm_inflator_title_normal"
                                android:textColor="@color/txt_color"

                                />

                            <TextView
                                android:id="@+id/transferRequest_optreq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="1"
                                android:textSize="@dimen/largelayout_storesize"
                                android:textColor="@color/text_sales"
                                />


                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>

            <!--bellow layout-->

            <LinearLayout
                android:layout_below="@+id/linearHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/smdm_divider_Black_light"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <TextView
