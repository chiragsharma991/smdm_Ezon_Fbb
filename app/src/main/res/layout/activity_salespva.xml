<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_header_height"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageBtnBack"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/button_red_effect">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/common_back_icon"
                    android:clickable="false" />

            </RelativeLayout>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/imageBtnBack"
                android:text="Sales PvA"
                android:textColor="#ffffff"
                android:textSize="20sp" />


            <RelativeLayout
                android:id="@+id/imageBtnFilter"
                android:layout_width="@dimen/header_clickable_width"
                android:layout_height="@dimen/header_clickable_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_red_effect">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/key_product_search_icon"
                    android:clickable="false" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/tstoreCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store : "
                android:textColor="#920609"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtStoreCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tstoreCode"
                android:hint="3215"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/txtStoreCode"
                android:hint="FAL CDC-New Delhi"
                android:textColor="#000000"
                android:textSize="11sp" />

        </RelativeLayout>


    </LinearLayout>

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmented3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_corner_radius="5dp"
        segmentedgroup:sc_tint_color="#B73020">

        <RadioButton
            android:id="@+id/btn_wtd"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#B73020"
            android:text="WTD" />

        <RadioButton
            android:id="@+id/btn_lw"
            style="@style/RadioButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="LW" />


    </info.hoang8f.android.segmented.SegmentedGroup>

    <LinearLayout
        android:id="@+id/llayoutSalesAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relChartlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/barline_chart"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relTablelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/llheader"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/darker_gray">



                    <RelativeLayout
                        android:id="@+id/btnSalesBack"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_red_effect">


                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/common_back_icon"
                            android:clickable="false" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtPlanClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@+id/btnSalesNext"
                        android:gravity="center_vertical|center"
                        android:text="Department"
                        android:textColor="@android:color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"/>

                    <!--</RelativeLayout>-->


                    <RelativeLayout
                        android:id="@+id/btnSalesNext"
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/txtPlanSales"
                        android:background="@drawable/button_red_effect"
                        android:focusableInTouchMode="true">

                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/key_product_search_icon"
                            android:clickable="false" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtPlanSales"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="170dp"
                        android:layout_toLeftOf="@+id/txtNetSales"
                        android:gravity="center_vertical|center"
                        android:text="Plan Sales"
                        android:textColor="@android:color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/txtNetSales"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="90dp"
                        android:layout_toLeftOf="@+id/rel"
                        android:gravity="center_vertical|center"
                        android:text="Net Sales"
                        android:textColor="@android:color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/rel"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|center"
                        android:text="PvA Sales %"
                        android:textColor="@android:color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/darker_gray">

                    <EditText
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="245dp"
                        android:layout_toLeftOf="@+id/edt_plansales"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black" />


                    <EditText
                        android:paddingRight="2dp"
                        android:id="@+id/edt_plansales"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="163dp"
                        android:layout_toLeftOf="@+id/edt_netsales"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center_vertical" />


                    <EditText

                        android:id="@+id/edt_netsales"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="82dp"
                        android:layout_toLeftOf="@+id/edt_pvaSales"
                        android:background="@drawable/rounded_edittext"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edt_pvaSales"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_edittext"
                        android:textColor="@android:color/black" />


                </RelativeLayout>

            </LinearLayout>


            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:smoothScrollbar="true"></ListView>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>