                <TextView
                    android:id="@+id/txtNationalVal_MixSales"
                    android:layout_weight="1"
                    android:text="60%"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

