                <TextView
                    android:id="@+id/txtStoreVal_SellThro"
                    android:layout_weight="1"
                    android:text="40%"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/txtZonalVal_SellThro"
                    android:layout_weight="1"
                    android:text="50%"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtNationalVal_SellThro"
                    android:layout_weight="1"
                    android:text="60%"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <TextView
                android:id="@+id/txtSellThro"
                android:text="Sell Thro (U) %"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/mixsales"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="70dp">


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/fixval4"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:text="Store"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_weight="1"
                    android:text="Zonal"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:text="National"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/fixval4"
                android:weightSum="3"
