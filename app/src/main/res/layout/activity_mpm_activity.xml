<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".Collaboration.to_do.To_Do"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        >


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_header_height"
            android:minHeight="@dimen/toolbar_header_height"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/mpm_imageBtnBack"
                    android:layout_width="@dimen/header_clickable_width"
                    android:layout_height="@dimen/header_clickable_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/button_red_effect"
                    >

                    <Button
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/common_back_icon"
                        android:clickable="false" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/mpm_imageBtnBack"
                    android:text="Season Catalogue"
                    android:textColor="@color/divider_salescard1"
                    android:textSize="@dimen/smdm_header_title_large" />



            </RelativeLayout>


        </android.support.v7.widget.Toolbar>




    </android.support.design.widget.AppBarLayout>

    <!--Main base layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/baseLayout"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <!--for show webview-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/webview_wrap"
                        android:orientation="vertical">


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="10dp"
                        android:background="#99464646"
                        android:layout_alignParentBottom="true"

                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pages :"
                                android:layout_marginRight="3dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/smdm_departmentTitleLarge"


                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_marginRight="3dp"
                                android:id="@+id/pages_count"
                                android:textColor="@color/white"
                                android:textSize="@dimen/smdm_departmentTitleLarge"



                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:layout_marginRight="3dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/smdm_departmentTitleLarge"



                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/pages_total"
                                android:textColor="@color/white"
                                android:textSize="@dimen/smdm_departmentTitleLarge"


                                />

                        </LinearLayout>





                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/pdf_zoom_btn"
                        android:padding="5dp"
                        android:background="@drawable/zoom_effect"
                        android:layout_marginLeft="20dp"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/zoom_in_out_map_black_24dp"

                            >

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <!--this is for process bar-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#464646"
                    android:visibility="gone"
                    android:id="@+id/webview_process"
                    >

                    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/imageLoader_feedback"
                        android:layout_centerInParent="true"
                        android:background="#0000"
                        android:keepScreenOn="true"
                        android:theme="@style/ProgressBar">

                    </ProgressBar>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageLoader_feedback"


                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PDF: "
                            android:textColor="@color/white"
                            android:textSize="@dimen/smdm_departmentTitleLarge"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/process_count"
                            android:textColor="@color/white"
                            android:textSize="@dimen/smdm_departmentTitleLarge"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/100"
                            android:textColor="@color/white"
                            android:textSize="@dimen/smdm_departmentTitleLarge"

                            />

                    </LinearLayout>






                </RelativeLayout>






            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:visibility="visible"
            android:id="@+id/bottom_listItem"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <!--second layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_vertical"
                android:background="#f8f6f6"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Department"
                    android:textSize="@dimen/smdm_departmentTitleLarge"
                    android:textColor="@color/bg_store_code_text"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    />

            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/department_list"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                >

            </ListView>
























        </LinearLayout>










    </LinearLayout>
















</android.support.design.widget.CoordinatorLayout>
