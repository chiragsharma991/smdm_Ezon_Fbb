<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/bg_store_code_text"
            android:textSize="18sp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:text="Select store code"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/smdm_border"
            >

        </View>


    </LinearLayout>




    <EditText
        android:textCursorDrawable="@null"
        android:background="@color/bg_screen_color"
        android:maxLines="1"
        android:hint="Search"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:imeOptions="actionSearch"
        android:id="@+id/search_store"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <View
        android:background="@color/smdm_divider_Black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_storeList"
        android:layout_marginTop="3dp"
        >

    </ListView>



</LinearLayout>