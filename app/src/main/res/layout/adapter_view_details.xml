<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewdetails"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rel_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:id="@+id/txt_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textStyle="bold"
              android:textColor="@color/ezfb_black"
              android:text="FG Store Audit"/>

            <RelativeLayout
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_mallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ezfb_black"
                    android:text="FBB - ABC Mall"
                    />

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_below="@+id/txt_mallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:text="Kandivali Mumbai 400008"
                    />

                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_below="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/ezfb_Red"
                    android:text="Average Rating 4.5"
                    />

                <TextView
                    android:id="@+id/txt_noOfAudit"
                    android:layout_below="@+id/txt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/ezfb_black"
                    android:layout_marginTop="5dp"
                    android:text="No. of Audit : 2"
                    />

                <TextView
                    android:id="@+id/txt_mallName1"
                    android:layout_below="@+id/txt_noOfAudit"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ezfb_black"
                    android:text="FBB - XYZ Mall"
                    />

                <TextView
                    android:id="@+id/txt_location1"
                    android:layout_below="@+id/txt_mallName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:text="Kandivali Mumbai 400008"
                    />

                <TextView
                    android:id="@+id/txt_rating1"
                    android:layout_below="@+id/txt_location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/ezfb_Red"
                    android:text="Average Rating 4.5"
                    />

                <TextView
                    android:id="@+id/txt_noOfAudit1"
                    android:layout_below="@+id/txt_rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/ezfb_black"
                    android:layout_marginTop="5dp"
                    android:text="No. of Audit : 2"
                    />



            </RelativeLayout>



        </RelativeLayout>







    </android.support.v7.widget.CardView>


</RelativeLayout>