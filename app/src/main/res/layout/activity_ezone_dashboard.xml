<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear_ezone"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_screen_color"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Welcome to Ezone...!!!"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh Time :"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/smdm_inflator_title_large"

                />

            <TextView
                android:id="@+id/txt_ezone_refresh_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/bg_store_code_text"
                android:textSize="@dimen/smdm_inflator_title_large"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_sales_inv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/time">


            <TextView
                android:id="@+id/ezone_headersales"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/ezone_sales_header"
                android:textColor="@color/smdm_dark_Black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/txt_sales_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ezone_headersales"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/smdm_divider_Black"
                />

            <LinearLayout
                android:id="@+id/linear_ezone_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sales_view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_ezone_Sales"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/sales_analysis"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/ezone_sales_header"
                            android:textColor="@color/smdm_light_Black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/ezone_header_inventory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linear_ezone_sales"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/ezone_inventory_header"
                android:textColor="@color/smdm_dark_Black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/txt_inventory_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ezone_header_inventory"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/smdm_divider_Black"
                />

            <LinearLayout
                android:id="@+id/linear_ezone_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_inventory_view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_ezone_AssortmentAnalysis"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/feshness_index"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/ezone_assortment_analysis"
                            android:textColor="@color/smdm_light_Black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_ezone_best_worst"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/best_worst_promo"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/ezone_best_worst"
                            android:textColor="@color/smdm_light_Black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_ez_cust_loyalty"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/cust_loyalty"
                android:textColor="@color/smdm_dark_Black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/linear_ezone_inventory"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_below="@+id/txt_ez_cust_loyalty"
                android:id="@+id/txt_ez_cust_loyalty_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/smdm_divider_Black"/>


            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_below="@+id/txt_ez_cust_loyalty_view"
                android:id="@+id/linear_ez_cust_loyalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/btn_ez_cust_loyalty"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/customer_lookup"/>

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/smdm_light_Black"
                            android:text="@string/cust_loyalty"
                            android:gravity="center_horizontal"
                            android:textSize="13sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/inspection_history" />


                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textSize="13sp"
                            android:textColor="@color/smdm_light_Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/inspection_history"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/departmenticon"/>

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/smdm_light_Black"
                            android:text="MPM"
                            android:gravity="center_horizontal"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_gravity="center_horizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/bg_screen_color"
                            android:src="@mipmap/skewed_size"/>

                        <TextView
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SkewedSize"
                            android:textSize="13sp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




            <!--Customer Loyalty End-->

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>